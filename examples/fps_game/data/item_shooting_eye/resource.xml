<?xml version="1.0"?>

<!--
  Define item "ShootingEye".

  We use type="Weapon", which indicates TItemWeaponResource class,
  that includes everything you need for a typical weapon (immediate (short-range
  or shooting) or firing missiles).
-->

<resource
  name="ShootingEye"
  type="Weapon"
  caption="Shooting Eye"
  image="inventory_image.png"
>
  <model>
    <base   url="base.gltf"/>
    <attack url="ready.gltf"/> <!-- No fancy animation when shooting for now -->
    <ready  url="ready.gltf"/>
  </model>
  <attack time="0.0" shoot="True"
    sound_start="eye_shoot" knockback_distance="4.0">
    <damage const="10" random="5" />
  </attack>
</resource>
